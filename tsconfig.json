{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@alteran/*": [
        "src/*"
      ]
    },
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "WebWorker"],
    "types": ["@cloudflare/workers-types", "bun-types"]
  }
}
