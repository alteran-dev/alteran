{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "WebWorker"],
    "types": ["@cloudflare/workers-types"]
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "!src/pages/**/*" // exclude Astro route modules from typecheck here
  ],
  "exclude": ["tests/**/*", "src/pages/**/*"]
}
